---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <style>
      :root {
        color-scheme: dark;
      }
      body {
        font-family: 'Inter', sans-serif;
      }
      h1, h2, h3 {
        font-family: 'Montserrat', sans-serif;
      }
      .dark {
        --tw-bg-opacity: 1;
        background-color: rgb(18 24 39 / var(--tw-bg-opacity)); /* Un gris muy oscuro, casi negro-azul */
        --tw-text-opacity: 1;
        color: rgb(229 231 235 / var(--tw-text-opacity)); /* Blanco suave para texto */
      }
    </style>
  </head>
  <body class="dark:bg-gray-900 dark:text-gray-200 antialiased">
    <slot />
  </body>
</html>