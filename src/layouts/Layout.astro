---
interface Props { title: string; }
const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="dark">
  <head>
    <meta charset="utf-8" />
    <!-- Viewport correcto y seguro para muescas (iOS/Android) -->
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />

    <!-- Color de la UI del navegador en móviles -->
    <meta name="theme-color" media="(prefers-color-scheme: light)" content="#0f172a" />
    <meta name="theme-color" media="(prefers-color-scheme: dark)" content="#0b1220" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Tipos con swap para evitar FOIT -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600;800&family=Inter:wght@400;600&display=swap"
      rel="stylesheet"
    />

    <!-- ⚠️ Recomendado: usa la integración oficial de Tailwind en Astro.
         Si sigues con CDN, mejor CDNs modernos o tu build local.
         Mantengo tu CDN actual por compatibilidad: -->
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />

    <style>
      :root { color-scheme: dark; }
      html, body { height: 100%; }
      body {
        font-family: 'Inter', system-ui, -apple-system, Segoe UI, Roboto, sans-serif;
        line-height: 1.5;
        text-rendering: optimizeLegibility;
      }
      h1, h2, h3 { font-family: 'Montserrat', ui-sans-serif, system-ui, sans-serif; }
      .dark {
        --tw-bg-opacity: 1;
        background-color: rgb(15 23 42 / var(--tw-bg-opacity)); /* slate-900 */
        --tw-text-opacity: 1;
        color: rgb(226 232 240 / var(--tw-text-opacity));        /* slate-200 */
      }

      /* Skip link visible al enfocar con teclado */
      .skip-link {
        position: absolute; left: 0.5rem; top: 0.5rem;
        padding: 0.5rem 0.75rem; border-radius: 0.5rem;
        background: #111827; color: #fff; transform: translateY(-150%);
      }
      .skip-link:focus { transform: translateY(0); outline: 2px solid #a78bfa; }

      /* Safe areas en iPhone con notch */
      main { padding-left: max(1rem, env(safe-area-inset-left)); padding-right: max(1rem, env(safe-area-inset-right)); }
    </style>
  </head>

  <body class="dark:bg-gray-900 dark:text-gray-200 antialiased">
    <a href="#main-content" class="skip-link">Saltar al contenido</a>

    <!-- Landmark principal -->
    <div role="document">
      <slot />
    </div>
  </body>
</html>
