---
import type { Project } from "@/types/portfolio";

interface Props {
  project: Project;
  delay?: number;
}

const { project, delay = 0 } = Astro.props;

const stackItems = [
  ...(project.stack ?? []),
  project.backend ? `Backend: ${project.backend}` : undefined,
  project.deploy ? `Deploy: ${project.deploy}` : undefined,
].filter(Boolean) as string[];

const headingId = `project-${project.title.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/^-|-$/g, '')}`;
const projectType = project.backend ? 'Full stack' : 'Frontend';
---

<article class="project-card" style={`--delay:${delay}ms;`} aria-labelledby={headingId}>
  <header class="project-card__header">
    <span class={`project-card__badge project-card__badge--${projectType === 'Full stack' ? 'full' : 'front'}`}>
      {projectType}
    </span>
    <h3 id={headingId} class="project-card__title">{project.title}</h3>
  </header>

  <div class="project-card__body">
    <p class="project-card__description">{project.description}</p>

    {stackItems.length > 0 && (
      <ul class="project-card__stack" aria-label="Tecnologías y despliegue">
        {stackItems.map((item) => (
          <li>
            <span class="project-card__stack-dot" aria-hidden="true"></span>
            {item}
          </li>
        ))}
      </ul>
    )}
  </div>

  <footer class="project-card__footer">
    {project.demoUrl && (
      <a
        href={project.demoUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="project-card__cta project-card__cta--primary"
      >
        Ver página
      </a>
    )}

    {project.repoUrl && (
      <a
        href={project.repoUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="project-card__cta"
      >
        Código fuente
      </a>
    )}
  </footer>
</article>

<style>
  .project-card {
    height: 100%;
    display: grid;
    grid-template-rows: auto 1fr auto;
    gap: 1.2rem;
    padding: clamp(1.6rem, 2.2vw, 1.9rem);
    background: linear-gradient(180deg, rgba(16, 24, 40, 0.95), rgba(12, 18, 32, 0.95));
    border: 1px solid rgba(148, 163, 184, 0.18);
    border-radius: 20px;
    box-shadow: 0 16px 32px rgba(6, 12, 24, 0.35);
    animation: fadeIn 0.45s ease forwards;
    animation-delay: var(--delay, 0ms);
    opacity: 0;
    transform: translateY(18px);
    position: relative;
    z-index: 0;
  }

  .project-card__header { display: grid; gap: 0.5rem; }

  .project-card__badge {
    justify-self: flex-start;
    padding: 0.26rem 0.72rem;
    border-radius: 999px;
    color: #0b1220;
    font-size: 0.66rem;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    font-weight: 700;
    background: linear-gradient(120deg, rgba(134, 161, 255, 0.92), rgba(120, 196, 252, 0.92));
  }
  .project-card__badge--front { background: linear-gradient(120deg, rgba(120, 196, 252, 0.94), rgba(167, 243, 208, 0.94)); }
  .project-card__badge--full  { background: linear-gradient(120deg, rgba(167, 139, 250, 0.94), rgba(96, 165, 250, 0.94)); }

  .project-card__title {
    margin: 0;
    font-size: clamp(1.18rem, 1.8vw, 1.4rem);
    color: rgba(238, 242, 255, 0.96);
  }

  .project-card__body {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .project-card__description {
    margin: 0;
    font-size: clamp(0.95rem, 1.1vw, 1.05rem);
    color: rgba(214, 224, 240, 0.88);
    line-height: 1.6;
  }

  .project-card__stack {
    display: flex;
    flex-wrap: wrap;
    gap: 0.45rem;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .project-card__stack li {
    display: inline-flex;
    align-items: center;
    gap: 0.34rem;
    padding: 0.3rem 0.6rem;
    border-radius: 999px;
    font-size: 0.74rem;
    letter-spacing: 0.02em;
    color: rgba(226, 232, 240, 0.9);
    border: 1px solid rgba(148, 163, 184, 0.22);
    background: rgba(25, 34, 54, 0.72);
  }

  .project-card__stack-dot {
    width: 0.38rem;
    height: 0.38rem;
    border-radius: 50%;
    background: rgba(124, 140, 255, 0.8);
  }

  .project-card__footer {
    display: grid;
    gap: 0.65rem;
  }

  .project-card__cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.52rem 1.05rem;
    border-radius: 14px;
    font-weight: 600;
    border: 1px solid rgba(148, 163, 184, 0.24);
    color: var(--text-0);
    text-decoration: none;
    transition: transform var(--transition), background var(--transition), border-color var(--transition), color var(--transition);
  }

  .project-card__cta:hover {
    transform: translateY(-1px);
    background: rgba(24, 32, 54, 0.82);
  }

  .project-card__cta--primary {
    background: linear-gradient(120deg, rgba(124, 140, 255, 0.94), rgba(96, 165, 250, 0.94));
    border-color: rgba(124, 140, 255, 0.45);
    color: #0b1220;
    box-shadow: 0 12px 22px rgba(124, 140, 255, 0.28);
  }

  .project-card__cta--primary:hover {
    border-color: rgba(124, 140, 255, 0.55);
    color: #0b1220;
  }

  .project-card__cta:not(.project-card__cta--primary) {
    background: rgba(18, 26, 42, 0.7);
  }

  @keyframes fadeIn { to { opacity: 1; transform: translateY(0); } }
  @media (prefers-reduced-motion: reduce) {
    .project-card { animation: none; opacity: 1; transform: none; }
  }
</style>
