---
import ProjectCard from './ProjectCard.astro';
import type { Project } from "@/types/portfolio";

const projects = [
  {
    title: "Coronela songs - Página web",
    description:
      "Aplicación web para concursos musicales en directo con accesibilidad y tiempo real, integrada con Supabase y desplegada en Vercel.",
    stack: ["Astro"],
    backend: "Supabase",
    deploy: "Vercel",
    demoUrl: "https://coronelasongs.vercel.app/",
    repoUrl: "https://github.com/abrijudo/coronelas-songs",
  },
  {
    title: "CV Abraham Alvarez - Página web",
    description:
      "Currículum digital accesible construido con Astro, auditado con Lighthouse y WAVE, desplegado en Netlify.",
    stack: ["Astro"],
    deploy: "Netlify",
    demoUrl: "https://cv-abrahamalvarez.netlify.app/",
    repoUrl: "https://github.com/abrijudo/cv_abrahamAlvarez",
  },
  {
    title: "Compra familiar - Página web",
    description:
      "Gestor colaborativo de listas de compra con sincronización en tiempo real, autenticación y optimización móvil.",
    stack: ["Astro"],
    backend: "Firebase",
    deploy: "Vercel",
    demoUrl: "https://compra-familiar.vercel.app/",
    repoUrl: "https://github.com/abrijudo/comprafamilia",
  },
  {
    title: "Tecnologicos - Página web",
    description:
      "Catálogo accesible de dispositivos móviles diseñado como ejemplo para formación pública.",
    stack: ["HTML", "CSS", "JS"],
    deploy: "Vercel",
    demoUrl: "https://tecnologicos.vercel.app/",
    repoUrl: "https://github.com/abrijudo/Tecnologicos",
  },
] satisfies Project[];
---

<section class="portfolio" id="portfolio" aria-labelledby="portfolio-heading">
  <header class="portfolio__header">
    <p class="portfolio__eyebrow">Proyectos destacados</p>
    <h2 id="portfolio-heading" class="portfolio__title">Mi Portafolio</h2>
    <p class="portfolio__lead">
      Cada entrega incluye auditoría de accesibilidad, métricas de rendimiento y documentación para el equipo técnico.
    </p>
  </header>

  <div class="portfolio__grid">
    {projects.map((project, index) => (
      <ProjectCard project={project} delay={index * 80} />
    ))}
  </div>
</section>

<style>
  .portfolio {
    display: grid;
    gap: clamp(2.2rem, 4vw, 3.2rem);
  }

  .portfolio__header {
    display: grid;
    gap: 0.75rem;
    text-align: center;
    justify-items: center;
    max-width: 48rem;
    margin: 0 auto;
  }

  .portfolio__eyebrow {
    margin: 0;
    font-size: 0.78rem;
    letter-spacing: 0.24em;
    text-transform: uppercase;
    color: rgba(203, 213, 225, 0.65);
  }

  .portfolio__title {
    margin: 0;
    font-size: clamp(2.1rem, 3.2vw, 2.8rem);
    color: rgba(236, 242, 255, 0.95);
  }

  .portfolio__lead {
    margin: 0;
    font-size: clamp(1rem, 1.3vw, 1.12rem);
    color: rgba(203, 213, 225, 0.78);
  }

  .portfolio__grid {
    display: grid;
    gap: clamp(3.5rem, 4.5vw, 6.5rem);
    grid-template-columns: repeat(auto-fit, minmax(19rem, 1fr));
    grid-auto-rows: 1fr;
    align-items: stretch;
  }
</style>
